<?php

Route::group(
[
 'prefix' => 'backend/<%= table_name_lower %>',
 'middleware' => ['web', 'has.backend.access'],
 'namespace' => '<%= namespace %>\Http\Controllers',
],
function () {
     //---------------------------------------------------------
     Route::get('/', '<%= controller_name %>Controller@getIndex')
    ->name('vh.backend.<%= table_name_lower %>.<%= controller_name_lower %>');
     //---------------------------------------------------------
     Route::any('/assets', '<%= controller_name %>Controller@getAssets')
    ->name('vh.backend.<%= table_name_lower %>.<%= controller_name_lower %>.assets');
     //---------------------------------------------------------
     Route::post('/create', '<%= controller_name %>Controller@postCreate')
    ->name('vh.backend.<%= table_name_lower %>.<%= controller_name_lower %>.create');
     //---------------------------------------------------------
     Route::any('/list', '<%= controller_name %>Controller@getList')
    ->name('vh.backend.<%= table_name_lower %>.<%= controller_name_lower %>.list');
     //---------------------------------------------------------
     Route::any('/item/{uuid}', '<%= controller_name %>Controller@getItem')
    ->name('vh.backend.<%= table_name_lower %>.<%= controller_name_lower %>.item');
     //---------------------------------------------------------
     Route::post('/store/{uuid}', '<%= controller_name %>Controller@postStore')
    ->name('vh.backend.<%= table_name_lower %>.<%= controller_name_lower %>.store');
     //---------------------------------------------------------
     Route::post('/actions/{action_name}', '<%= controller_name %>Controller@postActions')
    ->name('vh.backend.<%= table_name_lower %>.<%= controller_name_lower %>.actions');
     //---------------------------------------------------------
});
