let routes= [];
let routes_list= [];

import List from '../pages/<%= controller_name_lower %>/List.vue'
import Form from '../pages/<%= controller_name_lower %>/Form.vue'
import Item from '../pages/<%= controller_name_lower %>/Item.vue'

routes_list = {

    path: '/<%= controller_name_lower %>',
    name: '<%= controller_name_lower %>.index',
    component: List,
    props: true,
    children: [
        {
            path: 'form/:id?',
            name: '<%= controller_name_lower %>.form',
            component: Form,
            props: true,
        },
        {
            path: 'view/:id?',
            name: '<%= controller_name_lower %>.view',
            component: Item,
            props: true,
        }
    ]
};

routes.push(routes_list);

export default routes;

